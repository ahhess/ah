package bwbv.rlt.client.service;

import com.google.gwt.core.client.GWT;
import com.google.gwt.user.client.rpc.ServiceDefTarget;

public class RltServiceFactory {

	private static RltServiceAsync service;

	private RltServiceFactory() {
	}

	public static RltServiceAsync getService() {
		if (service == null) {
			service = GWT.create(RltService.class);
			((ServiceDefTarget) service).setServiceEntryPoint(GWT.getModuleBaseURL() + "RltService");
		}
		return service;
	}

}
